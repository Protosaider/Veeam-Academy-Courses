<Application x:Class="ClientApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:ClassModifier="internal">
    <!-- Set default styles -->
    <Application.Resources>
        <ResourceDictionary>
            <!--Коллекция словарей ресурсов-->
            <ResourceDictionary.MergedDictionaries>
                <!-- ORDER IS IMPORTANT (initialization from first to last)-->
                <ResourceDictionary Source="Styles/Colors.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Fonts.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Buttons.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Texts.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Scroll.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/CheckBoxes.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
